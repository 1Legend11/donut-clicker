extends layout

block content
  .main.index
    .header-text
      img(src="/images/donut1.png", alt="",width="100px")
      h1(class="header-title") Donut Clicker
      small Built with NodeJS
    .game
      .valign-wrapper.row
        .col.s10.pull-s1.m8.pull-m2.l8.pull-l2.main-tabs
          ul.tabs
            li.tab.col.s3
              a(href='#game') Jeu
            li.tab.col.s3
              a(href='#options') Options
            li.tab.col.s3
              a(href='#stats') Stats
              li.tab.col.s3
                a(href='#gains') Gains
      .valign-wrapper.row
        #game.tab-item.col.s10.pull-s1.m8.pull-m2.l8.pull-l2
          .row
            .col.s6.donuts-part
              .title Donut Clicker
              .donuts
                span.nbDonuts 0
                span  Donuts
              .freq
                span.donutsPerSec 1
                span  par seconde
              .main-donut
                a(id="donutLink")
                  img(src="/images/main-donut.png", alt="")
            .col.s6.extras-part
              .title Extras
              .extra1.disabled
                .row
                  .col.s12
                    .card.hoverable.blue
                      .card-content.white-text
                        .extra-head
                          img(src="/images/simpson/maggie.png", alt="",width="72px")
                        .extra-infos
                          span.extra-title Maggie
                          span.extra-cost 10
                        .extra-counter
                          span 0

              .extra2.disabled
                .row
                  .col.s12
                    .card.hoverable.blue
                      .card-content.white-text
                        .extra-head
                          img(src="/images/simpson/lisa.png", alt="",width="72px")
                        .extra-infos
                          span.extra-title Lisa
                          span.extra-cost 200
                        .extra-counter
                          span 0
              .extra3.disabled
                .row
                  .col.s12
                    .card.hoverable.blue
                      .card-content.white-text
                        .extra-head
                          img(src="/images/simpson/bart.png", alt="",width="70px")
                        .extra-infos
                          span.extra-title Bart
                          span.extra-cost 3000
                        .extra-counter
                          span 0
              .extra4.disabled
                .row
                  .col.s12
                    .card.hoverable.blue
                      .card-content.white-text
                        .extra-head
                          img(src="/images/simpson/marge.png", alt="",width="70px")
                        .extra-infos
                          span.extra-title Marge
                          span.extra-cost 40000
                        .extra-counter
                          span 0
              .extra5.disabled
                .row
                  .col.s12
                    .card.hoverable.blue
                      .card-content.white-text
                        .extra-head
                           img(src="/images/simpson/homer.png", alt="",width="70px")
                        .extra-infos
                          span.extra-title Homer
                          span.extra-cost 500000
                        .extra-counter
                          span 0
              
        #options.tab-item.col.s10.pull-s1.m8.pull-m2.l8.pull-l2.options
          .volume
            span
              i.material-icons volume_up
            input#vol(style='width: 75%;', type='range', min='0', max='1', step='0.01', value='1')
